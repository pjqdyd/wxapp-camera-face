/* components/camera-face/index.wxss */
.page-body {
  width: 100%;
  height: 100%;
  background: #ffffff;
}

.camera-box {
  width: 750rpx;
  height: 505rpx;
  margin-top: 100rpx;
  position: relative;
  overflow: hidden;
  display: flex;
  justify-content: center;
  align-items: center;
}

.camera {
  width: 480rpx;
  height: 480rpx;
  z-index: 1;
  border-radius: 50%;
}

.img-view {
  width: 750rpx;
  height: 505rpx;
  position: absolute;
  top: 0;
  left: 0;
  z-index: 999;
}
.mask-img {
  width: 750rpx;
  height: 505rpx;
}

.bottom-view {
  width: 100%;
  height: 120rpx;
  background: rgba(1, 1, 1, .3);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-top: 30rpx;
}
.bottom-btn {
  width: 300rpx;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  background: rgba(250, 250, 250, .8);
  border-radius: 35rpx;
}

.bottom-tips {
  width: 100%;
  height: 35rpx;
  color: #ffffff;
  line-height: 35rpx;
  text-align: center;
}
